{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "react": ["preact/compat"],
      "react-dom": ["preact/compat"],
      "react/jsx-runtime": ["preact/jsx-runtime"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/telegram-webapps-types-new"
    ],
    "types": ["preact/compat", "preact"]
  },
  "include": ["src/**/*", "preact.config.js"]
}
