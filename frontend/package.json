{
  "private": true,
  "name": "buttonmania",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build --no-prerender --prerenderUrls ./prerender-urls.json",
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch --port 8888 --no-prerender --prerenderUrls ./prerender-urls-debug.json",
    "serve": "sirv build --cors --single",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.6.0",
    "axios": "^1.11.0",
    "class-transformer": "^0.5.1",
    "gl-react": "^5.2.0",
    "gl-react-dom": "^5.2.1",
    "i18next": "^25.3.4",
    "preact": "^10.27.0",
    "preact-render-to-string": "^6.5.13",
    "preact-router": "^4.1.2"
  },
  "devDependencies": {
    "@twa-dev/types": "^8.0.2",
    "@types/enzyme": "^3.10.19",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "cross-env": "^10.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.1.0",
    "eslint": "^9.33.0",
    "eslint-config-preact": "^2.0.0",
    "jest": "^30.0.5",
    "jest-preset-preact": "^4.1.1",
    "preact-cli": "^3.5.1",
    "preact-cli-svg-loader": "^1.1.0",
    "sirv-cli": "^3.0.1",
    "typescript": "^5.9.2",
    "webpack-glsl-loader": "^1.0.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
